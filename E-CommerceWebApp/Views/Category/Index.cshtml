@model IEnumerable<ModelClasses.Category>

@if(@TempData["alertMassage"] != null)
{
    <div class="alert alert-danger alert-dismissible role="alert">
        <button type="button" class="btn-close text-dark" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["alertMassage"]
    </div>
}
<div class="PaddingAll">
    <div class="row m-3">
        <div class="col-lg-7 col-md-5 col-sm-12">
            <h2 class="text-primary">Category List</h2>
            <hr />
        </div>
        <div class="col-lg-5 col-md-5 col-sm-12">
            <a asp-action="Upsert" asp-controller="Category" class="btn btn-primary form-control">Create Category</a>
        </div>
    </div>
    <div class="PaddingAllWhite">
        <div class="row">
            <div class="col">
                @if(Model.Count() > 0)
                {
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th asp-for="Id">ID</th>
                            <th asp-for="CategoryName">Name</th>
                            <th></th>
                        </tr>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CategoryName</td>
                                <td>
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 col-sm-12 pb-2">
                                            <a asp-action="Upsert" class="btn btn-primary form-control" asp-route-id="@item.Id" asp-controller="Category">Edit</a>
                                        </div>
                                        <div class="col-lg-7 col-md-5 col-sm-12 ">
                                            <a asp-action="Delete" class="btn btn-danger form-control" asp-route-id="@item.Id" asp-controller="Category">Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </table>
                }
            </div>
        </div>
    </div>
</div>
