@model ModelClasses.ViewModel.HomePageViewModel

<div class="bg-light border rounded" style="margin: 20px 0px 20px 0px">
    <div class="text-end">
        <form asp-action="Index" method="get">
            <div class="row m-2">
                <div class="col-md-6 col-lg-8 col-sm-12">
                    <h6 class="text-info text-center font-weight-bold">Welcome to Our Online Shopping Page</h6>
                </div>
                <div class="col-md-6 col-lg-4 col-sm-12">
                    <div class="d-flex justify-content-end">
                        <input asp-for="searchName" placeholder="search by name" class="form-control rounded-left" />
                        <button type="submit" class="btn btn-primary text-whitefont-weight-bold">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div style="padding:0px 25px 0px 0px;">
                <a asp-action="Index">Back to Full List </a>
            </div>
        </form>
    </div>
</div>


<div class="row ">
    <div class="col-xl-2 bg-white border-start-0 border-end-1 border-top-0 border-bottom-0 border-secondary d-none d-sm-block" style="border:solid black">
        <p class="text-success"><strong>Search by Categories</strong></p>
        <hr />
        @if(Model.Categories.Count() > 0)
        {
            <div>
                @foreach(var item in Model.Categories)
                {
                    <div class="pb-2">
                        <strong><a asp-action="Index" asp-route-searchCategoryName="@item.CategoryName" class="text-info"> <i class="fa fa-hand-point-right fa-lg" style="color:#22511f">&nbsp; </i>@item.CategoryName </a></strong>
                    </div>
                }
            </div>    
        }
        <hr />
        <p class="text-success"><strong>Most Bought Items</strong></p>
        <div id="carouseExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouseExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouseExampleDark" data-bs-slide-to="1" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouseExampleDark" data-bs-slide-to="2" aria-label="Slide 1"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="10000">
                    <img src="/Images/sdasdddddwd.jpg" class="d-block w-100" alt="..." style="width: 100px; height:200px; max-width:100%; ">
                </div>
                <div class="carousel-item" data-bs-interval="2000">
                    <img src="/Images/81GkqP8c3wL._SL1500_.jpg" class="d-block w-100" alt="..." style="width: 100px; height:200px; max-width:100%; ">
                </div>
                <div class="carousel-item">
                    <img src="/Images/OIP.jpg" class="d-block w-100" alt="..." style="width: 100px; height:200px; max-width:100%; ">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouseExampleDark" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouseExampleDark" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <hr />
        <p class="text-success"><strong>On Seasonal Sales</strong></p>
        <div id="carouseExampleDark1" class="carousel carousel-dark slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouseExampleDark1" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouseExampleDark1" data-bs-slide-to="1" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouseExampleDark1" data-bs-slide-to="2" aria-label="Slide 1"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="10000">
                    <img src="/Images/81GkqP8c3wL._SL1500_.jpg" class="d-block w-100" alt="..." style="width: 100px; height:200px; max-width:100%; ">
                </div>
                <div class="carousel-item" data-bs-interval="2000">
                    <img src="/Images/sdasdddddwd.jpg" class="d-block w-100" alt="..." style="width: 100px; height:200px; max-width:100%; ">
                </div>
                <div class="carousel-item">
                    <img src="/Images/OIP.jpg" class="d-block w-100" alt="..." style="width: 100px; height:200px; max-width:100%; ">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouseExampleDark1" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouseExampleDark1" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="col-xl-10">
        <div class="bg-light border rounded">
            @if (Model.ProductList.Count() > 0)
            {
                <div class="row d-flex justify-content-center">
                    @foreach (var item in Model.ProductList)
                    {
                        <div class="col-lg-auto col-md-auto mg-1 py-2 col-sm-auto">
                            <div class="card single-item" style="border-bottom:1px solid blue; height:270px; width:250px; box-shadow: 0 2px 4px 0 blue, 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                                <div class="img-container">
                                    <a asp-action="Details" asp-route-Id="@item.Id">
                                            <img src="~/Images/@item.HomeImgUrl" class="card-img-top rounded" style="width: 250px; height: 250px; max-width:100%;" />
                                    </a>
                                    <h3>
                                        <span class="store-item-icon">
                                            $@item.Price
                                        </span>
                                    </h3>
                                </div>
                                <div class="card-body bg-light">
                                    <div class="row card-text text-capitalize">
                                        <div class="col-lg-10 col-md-9 col-sm-6">
                                            <p class="text-success" id="store-item-name "><strong>@item.ProductName</strong></p>
                                        </div>
                                        <div class="col-lg-1 col-md-3 col-sm-6 text-end">
                                           <a asp-action="AddToCart" asp-controller="Cart" asp-route-productId="@item.Id">
                                            <strong id="store-item-price" class="font-weight-bold"><i class="fas fa-solid fa-plus"></i></strong>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
